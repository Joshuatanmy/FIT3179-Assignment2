{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "title": "Exercise data (use legend to filter values)",
  "data": {
      "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-2024/refs/heads/main/gym_members_exercise_tracking.csv",
      "format":{
          "type": "csv"
      }
  },
  "encoding": {
      "x": {
        "field": "Session_Duration (hours)",
        "type": "quantitative",
        "scale": {
          "domain": [0,2.2]
        },
        "title": "Session Duration (hours)"
      },
      "y": {
        "field": "Calories_Burned",
        "type": "quantitative",
        "scale":{
          "domain": [0,1800]
        },
        "title": "Calories Burned"
      },
      "tooltip": [
      {
        "field": "Calories_Burned", "type": "quantitative", "format": ","
      },
      {
        "field": "Max_BPM", "type": "quantitative", "format": ","
      },
      {
        "field": "Avg_BPM", "type": "quantitative", "format": ","
      },
      {
        "field": "Resting_BPM", "type": "quantitative", "format": ","
      }
    ]     
  },
  "params": [
    {
      "name": "frequency",
      "value":0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 7,
        "step": 1,
        "name": "Workout frequency (days/week)"
      }
    }
  ],
  "transform": [
    {
      "filter": "datum['Workout_Frequency (days/week)'] == if(frequency==0,false, frequency) || frequency==0"
    }

  ],
  "layer": [
    {
      "mark":{
        "type": "circle"
      },
      "params": [
        {
          "name": "type_workout",
          "select": {
            "type": "point",
            "fields": ["Workout_Type"]
          },
          "bind": "legend"
        }
      ],
      "encoding": {
        "color": {
          "field": "Workout_Type",
          "type": "nominal"
        },
        "opacity":{
          "condition": 
          {
            "param": "type_workout",
            "value": 1
          },
          "value": 0.1
        }
      }   
    },
    {
      "mark":{
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      }
    }
  ]

}