{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title" : "Prevelance of Diabetes in 2021 (Australia)",
  "width": 600,
  "height": 400,
  "projection": {"type": "mercator"},
  "layer":[
    {
    "data": {
      "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-Assignment2/refs/heads/main/data/Aus_map.json",
      "format":{
        "type": "topojson",
        "feature": "ne_50m_admin_1_states_provinces"
      }
    },
    "mark": {
      "type": "geoshape", 
      "fill":"lightgrey", 
      "stroke":"white"
    }
    },
    {
    "data": {
      "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-Assignment2/refs/heads/main/data/Aus_map.json",
      "format":{
        "type": "topojson",
        "feature": "ne_50m_graticules_5"
      }
    },
    "mark": {
      "type": "geoshape", 
      "fill":"", 
      "stroke":"black",
      "opacity":0.2
    }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-Assignment2/refs/heads/main/data/Aus_map.json",
        "format":{
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "layer": [
        {
          "mark": {
            "type": "geoshape",
            "stroke":"white",
            "color": "darkblue"
          },
          "encoding": {
            "color":{
              "field":"Diabetes",
              "type": "quantitative",
              "scale": {
                    "domain":[4,8]
              },
              "title": "Diabetes percentage"
            },
            "tooltip":[
              {
                "field": "Diabetes", "type": "quantitative", "format": "", "title": "% proportion of population affected"
              },
              {
                "field": "State", "type": "nominal", "format": ",", "title": "State"
              }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "dy": -10
          }
        }
      ],
      
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data":{
              "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-Assignment2/refs/heads/main/data/Proportion%20of%20people%20with%20long-term%20health%20conditions%20(%25).csv"
            },
            "key": "State",
            "fields": ["Diabetes", "State"]
          }
        }
      ]     
    }

  ]
}